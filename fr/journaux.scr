(defun
  lettre
  (x &rest r)
  (div :class "lettre" [
    ,(tag :a :name x)
    ,(subtitle (string-upcase x))
  ] r )
)


(defun
  journ
  (id titre details &rest references)
  (div :class "journal" :id id [
    ,(a :name id [ ])
    ,(p (span :class "titre" titre))
    ,(div :class "bio" details)
  ]
  (div :class "references" (apply 'p* references))
))

